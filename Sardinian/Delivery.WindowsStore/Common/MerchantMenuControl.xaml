<UserControl
    x:Class="Delivery.WindowsStore.Common.MerchantMenuControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Delivery.WindowsStore.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="{Binding Name}"/>
        <ListView Grid.Row="1" ItemsSource="{Binding Children}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <!--<TextBlock Text="{Binding Name}"/>-->
                    <local:MerchantMenuSectionControl MerchantMenuSectionTitle="{Binding Name}" MerchantMenuSectionItems="{Binding Children}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</UserControl>
